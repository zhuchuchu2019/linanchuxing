<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:text="临安出行"
            android:textSize="20sp"
            android:textColor="#fff"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <ImageView
    android:id="@+id/iv_turn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:src="@drawable/bk"
    android:layout_marginBottom="10sp"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
    android:id="@+id/iv_go_where1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:src="@drawable/gowhere"
    android:layout_weight="1"/>

    <ImageView
    android:id="@+id/iv_select1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:src="@drawable/select"
    android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp">
    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:text="去哪"
    android:layout_weight="1"
    android:paddingLeft="105sp"/>
    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:text="查询线路"
    android:layout_weight="1"
    android:paddingLeft="90sp"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="10sp"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
    android:id="@+id/iv_map1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:src="@drawable/map"
    android:layout_weight="1"/>
    <ImageView
    android:id="@+id/iv_my1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:src="@drawable/my"
    android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp">
    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:text="地图"
    android:layout_weight="1"
    android:paddingLeft="105sp"/>
    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:text="我的"
    android:layout_weight="1"
    android:paddingLeft="105sp"/>
    </LinearLayout>
    <TextView
    android:id="@+id/tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"/>
    <ImageView
    android:id="@+id/img_delete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:src="@drawable/ic_btn_del_normal"/>
    <android.support.v7.widget.RecyclerView
    android:id="@+id/collect_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
    </LinearLayout>